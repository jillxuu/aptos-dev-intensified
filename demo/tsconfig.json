{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@aptos/chatbot-core": ["../../packages/chatbot-core/src"],
      "@aptos/chatbot-react": ["../../packages/chatbot-react/src"],
      "@aptos/chatbot-ui-tailwind": ["../../packages/chatbot-ui-tailwind/src"]
    }
  },
  "include": ["src"]
}
